<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical" >

	<TableLayout 
		android:stretchColumns="1,2"
		android:layout_width="wrap_content" 
		android:layout_height="80dip" 
		android:id="@+id/tableLayout1"
		android:padding="3dip">
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView  
				android:id="@+id/high_score_label"
				android:layout_span="1"
			    android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="left"
	    		android:text="High Score"
				android:textSize="36sp"/>
			<TextView  
				android:id="@+id/score_text"
				android:layout_span="2"
	    		android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
	    		android:text="0"
				android:textSize="36sp"/>
           </TableRow>
	</TableLayout>
	<TextView  
		android:id="@+id/count_down_text"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="0"
		android:layout_marginBottom="25dip"
		android:textSize="60sp"/>

   <LinearLayout
       android:id="@+id/operation_layer"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginBottom="40dip"
       android:layout_marginLeft="20dip"
       android:layout_marginRight="20dip"
       android:gravity="center"
       android:minHeight="80dip"
       android:orientation="horizontal" >

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/operator_layer"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:baselineAligned="false"
	    android:gravity="center|center_horizontal"
	    android:measureWithLargestChild="true"
	    android:minHeight="80dip"
	    android:orientation="horizontal"
	    android:padding="0dp" >

		<ImageButton
		    android:id="@+id/plus_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:adjustViewBounds="true"
		    android:background="@drawable/empty_background"
		    android:contentDescription="@string/plus_btn_label"
		    android:padding="10dp"
		    android:scaleType="centerInside"
		    android:src="@drawable/plus" />

	    <ImageButton
	        android:id="@+id/minus_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:background="@drawable/empty_background"
	        android:contentDescription="@string/minus_btn_label"
	        android:padding="10dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/minus" />

		<Button
	    	android:id="@+id/clear_btn"
		    android:layout_width="80dip"
		    android:layout_height="fill_parent"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
		    android:textSize="24sp"
		    android:text="@string/clear_btn_label"/>
	</LinearLayout>
	<Button
	    	android:id="@+id/again_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="40dip"
		    android:textSize="36sp"
		    android:visibility="invisible"
		    android:text="@string/again_btn_label"/>
</LinearLayout>